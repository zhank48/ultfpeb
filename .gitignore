# Node.js dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Environment files (sensitive)
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Build outputs
/frontend/dist/
/frontend/build/
/backend/dist/
/backend/build/

# Logs
/backend/logs/
*.log
logs/
combined.log
error.log
combined-*.log

# Runtime data
pids/
*.pid
*.seed
*.pid.lock

