# ULT FPEB Ubuntu Server Deployment Configuration
# 
# Customize these variables before running the deployment script

#===============================================================================
# SERVER CONFIGURATION
#===============================================================================

# Domain name (change this to your actual domain)
export DOMAIN="your-domain.com"

# Application configuration
export APP_NAME="ult-fpeb"
export APP_DIR="/var/www/ult-fpeb"

# Node.js version to install
export NODE_VERSION="18"

#===============================================================================
# DATABASE CONFIGURATION
#===============================================================================

# Database settings
export DB_NAME="ult_fpeb_db"
export DB_USER="ult_fpeb_user"
export DB_PASSWORD="ULT_FPEB_2025_SecurePass!"  # Change this!

#===============================================================================
# APPLICATION PORTS
#===============================================================================

# Backend API port
export BACKEND_PORT="3001"

# Frontend development port (not used in production)
export FRONTEND_PORT="5173"

#===============================================================================
# SSL CONFIGURATION
#===============================================================================

# Email for Let's Encrypt SSL certificate
export SSL_EMAIL="admin@your-domain.com"

# Enable SSL (true/false)
export ENABLE_SSL="true"

#===============================================================================
# SECURITY CONFIGURATION
#===============================================================================

# JWT Secret (will be auto-generated if empty)
export JWT_SECRET=""

# Allowed CORS origins (comma-separated)
export CORS_ORIGINS="http://your-domain.com,https://your-domain.com"

#===============================================================================
# BACKUP CONFIGURATION
#===============================================================================

# Backup directory
export BACKUP_DIR="/var/backups/ult-fpeb"

# Keep backups for how many days
export BACKUP_RETENTION_DAYS="30"
