# Production Environment Configuration for ULT FPEB Backend
NODE_ENV=production
PORT=3001

# Database configuration - Production
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ult_fpeb_prod
DB_USER=root
DB_PASSWORD=your_production_mysql_password_here

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-production-jwt-key-change-this-immediately

# CORS Configuration - Production frontend URL
FRONTEND_URL=https://your-production-domain.com

# Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10mb

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log