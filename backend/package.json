{
  "name": "ult-fpeb-backend",
  "version": "1.0.0",
  "description": "Backend API for ULT FPEB application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --watch src --watch *.js --ext js,json",
    "dev:debug": "nodemon --inspect server.js",
    "setup-db": "node scripts/database-setup.js",
    "setup-db:dev": "cross-env NODE_ENV=development node scripts/database-setup.js",
    "test-db": "node scripts/database-test.js",
    "reset-db": "node scripts/database-reset.js",
    "init": "node scripts/project-init.js",
    "init:start": "node scripts/project-init.js --start-server",
    "seed": "node scripts/seed.js",
    "seed:dev": "cross-env NODE_ENV=development node scripts/seed.js",
    "check-db": "node scripts/database-test.js",
    "logs": "tail -f logs/combined.log || echo 'No logs found'",
    "logs:error": "tail -f logs/err.log || echo 'No error logs found'",
    "env:dev": "copy .env.development .env",
    "env:prod": "copy .env.production .env",
    "clean:logs": "rd /s /q logs 2>nul && mkdir logs || mkdir logs",
    "clean:uploads": "rd /s /q uploads 2>nul && mkdir uploads || mkdir uploads"
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.1.2",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "docxtemplater": "^3.65.1",
    "docxtemplater-image-module": "^3.1.0",
    "docxtemplater-image-module-free": "^1.1.1",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "file-saver": "^2.0.5",
    "form-data": "^4.0.3",
    "fs-extra": "^11.3.0",
    "helmet": "^7.1.0",
    "html-docx-js": "^0.3.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.7",
    "node-fetch": "^3.3.2",
    "officegen": "^0.6.5",
    "pizzip": "^3.2.0",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0"
  },
  "keywords": [
    "express",
    "mysql",
    "visitor-management",
    "university"
  ],
  "author": "ULT FPEB Team",
  "license": "MIT"
}
